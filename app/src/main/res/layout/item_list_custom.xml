<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/list_hieght"
    android:weightSum="6"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/auto_increament"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/body_text_size"
        android:hint="Numbering" />
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/body_text_size"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1.4"
        android:hint="Name" />

    <TextView
        android:id="@+id/score"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/body_text_size"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:hint="Score" />

    <TextView
        android:id="@+id/last_game"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/body_text_size"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:hint="@string/last_game" />

    <TextView
        android:id="@+id/total_games"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/body_text_size"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:text="@string/tot_games" />

    <Button
        android:id="@+id/history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@android:drawable/ic_menu_recent_history"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/txt_hist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="0"
        android:text="Start playing"
        />

</LinearLayout>